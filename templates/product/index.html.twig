{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {# The producs are the following: {{ dump(products) }} #}

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td><a href="{{ path('app_product', {'id': product.id}) }}">show</a></td>
                    <td><a href="{{ path('app_product_remove', {'id':product.id} )}}">delete</a></td>
                    
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
